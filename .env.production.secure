# SECURE PRODUCTION ENVIRONMENT - driveway-hub.app
# NEVER commit this file to version control
# Store securely on production server only

NODE_ENV=production
BUILD_TARGET=production

# =============================================================================
# SECURITY CREDENTIALS - REPLACE ALL VALUES BELOW
# =============================================================================

# Database Security (generate strong passwords)
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_SECURE_DB_PASSWORD_32_CHARS_MIN
DB_NAME=driveway_hub_prod
DB_HOST=postgres
DB_PORT=5432

# Redis Security  
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_SECURE_REDIS_PASSWORD_32_CHARS

# JWT Security (CRITICAL - use 64+ character random string)
JWT_SECRET=CHANGE_ME_JWT_SECRET_64_CHARS_MINIMUM_RANDOM_STRING_FOR_SECURITY

# =============================================================================
# TESLA API CREDENTIALS - FROM TESLA DEVELOPER PORTAL
# =============================================================================

# Tesla OAuth Application Credentials
TESLA_CLIENT_ID=PASTE_YOUR_TESLA_CLIENT_ID_HERE
TESLA_CLIENT_SECRET=PASTE_YOUR_TESLA_CLIENT_SECRET_HERE

# Tesla OAuth Configuration
TESLA_OAUTH_REDIRECT_URI=https://driveway-hub.app/auth/tesla/callback
TESLA_SUCCESS_URL=https://driveway-hub.app/auth/success
TESLA_OAUTH_SCOPE=openid offline_access user_data vehicle_device_data vehicle_cmds vehicle_charging_cmds

# =============================================================================
# PRODUCTION URLS - CONFIGURED FOR YOUR DOMAIN
# =============================================================================

DOMAIN=https://driveway-hub.app
FRONTEND_URL=https://driveway-hub.app
REACT_APP_API_URL=https://driveway-hub.app/api

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

VOLUME_MOUNT=
NODE_MODULES_VOLUME=